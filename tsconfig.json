{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "pretty": true
  },
  "types": ["jest"],
  "include": ["src", "typings"],
  "exclude": ["node_modules", "build"]
}
